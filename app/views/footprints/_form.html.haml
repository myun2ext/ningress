= form_for @footprint do |f|
  - if @footprint.errors.any?
    #error_explanation
      %h2= "#{pluralize(@footprint.errors.count, "error")} prohibited this footprint from being saved:"
      %ul
        - @footprint.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
